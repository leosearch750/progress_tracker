    <style name="Base.Theme.ProgressTracker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Force light popup menu with dark text -->
        <item name="popupMenuStyle">@style/PopupMenu.ProgressTracker</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.ProgressTracker</item>
        <item name="actionOverflowMenuStyle">@style/PopupMenu.ProgressTracker</item>
    </style>

    <style name="Theme.ProgressTracker" parent="Base.Theme.ProgressTracker" />

    <!-- Custom popup menu style with light background -->
